<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].NumStrings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].BodyStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].BodyColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].Neck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitar[0].NumFrets)
